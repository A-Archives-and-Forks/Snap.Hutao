<UserControl
    x:Class="Snap.Hutao.UI.Xaml.View.OverlayView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:cwc="using:CommunityToolkit.WinUI.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:Snap.Hutao.UI.Xaml.View"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:mxi="using:Microsoft.Xaml.Interactivity"
    xmlns:shuxb="using:Snap.Hutao.UI.Xaml.Behavior"
    xmlns:shuxm="using:Snap.Hutao.UI.Xaml.Markup"
    xmlns:shvo="using:Snap.Hutao.ViewModel.Overlay"
    d:DataContext="{d:DesignInstance shvo:OverlayViewModel}"
    mc:Ignorable="d">

    <mxi:Interaction.Behaviors>
        <shuxb:InvokeCommandOnLoadedBehavior Command="{Binding LoadCommand}"/>
    </mxi:Interaction.Behaviors>

    <Grid
        Padding="4"
        Background="{ThemeResource SolidBackgroundFillColorBaseBrush}"
        BackgroundSizing="OuterBorderEdge"
        BorderBrush="{x:Null}"
        BorderThickness="0"
        ColumnSpacing="4"
        CornerRadius="{ThemeResource OverlayCornerRadius}">

        <Grid.Resources>
            <SolidColorBrush
                x:Key="SolidBackgroundFillColorBaseBrush"
                Opacity="0.4"
                Color="{ThemeResource SolidBackgroundFillColorBase}"/>

            <SolidColorBrush
                x:Key="ToggleButtonBackgroundChecked"
                Opacity="0.4"
                Color="{ThemeResource SystemAccentColorDark1}"/>
            <SolidColorBrush
                x:Key="ToggleButtonBackgroundCheckedPointerOver"
                Opacity="0.36"
                Color="{ThemeResource SystemAccentColorDark1}"/>
            <SolidColorBrush
                x:Key="ToggleButtonBackgroundCheckedPressed"
                Opacity="0.32"
                Color="{ThemeResource SystemAccentColorDark1}"/>
            <SolidColorBrush
                x:Key="ToggleButtonBackgroundCheckedDisabled"
                Opacity="0.4"
                Color="{ThemeResource AccentFillColorDisabled}"/>
        </Grid.Resources>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <SplitButton
            Grid.Column="0"
            VerticalAlignment="Stretch"
            BorderThickness="0">
            <SplitButton.Content>
                <FontIcon Glyph="{Binding SelectedCatalog.Icon}"/>
            </SplitButton.Content>
            <SplitButton.Flyout>
                <Flyout
                    FlyoutPresenterStyle="{ThemeResource FlyoutPresenterPadding0And2Style}"
                    Placement="Bottom"
                    ShouldConstrainToRootBounds="False">
                    <ListView ItemsSource="{Binding Catalogs}" SelectedItem="{Binding SelectedCatalog, Mode=TwoWay}">
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <Grid ColumnSpacing="12">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="20"/>
                                        <ColumnDefinition/>
                                    </Grid.ColumnDefinitions>
                                    <FontIcon Grid.Column="0" Glyph="{Binding Icon}"/>
                                    <TextBlock Grid.Column="1" Text="{Binding Name}"/>
                                </Grid>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </Flyout>
            </SplitButton.Flyout>
        </SplitButton>

        <cwc:SwitchPresenter Grid.Column="1" Value="{Binding SelectedCatalog.Id}">
            <cwc:Case Value="HotKey">
                <Grid ColumnSpacing="4">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <ToggleButton
                        Grid.Column="0"
                        Padding="2"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Stretch"
                        BorderThickness="0"
                        IsChecked="{Binding HotKeyOptions.MouseClickRepeatForeverKeyCombination.IsOn, Mode=OneWay}"
                        IsHitTestVisible="False"
                        Visibility="{Binding HotKeyOptions.MouseClickRepeatForeverKeyCombination.IsEnabled, Converter={StaticResource BoolToVisibilityConverter}, Mode=OneWay}">
                        <Grid RowSpacing="4">
                            <Grid.RowDefinitions>
                                <RowDefinition/>
                                <RowDefinition Height="auto"/>
                            </Grid.RowDefinitions>
                            <TextBlock
                                Grid.Row="0"
                                HorizontalAlignment="Center"
                                Style="{StaticResource CaptionTextBlockStyle}"
                                Text="{shuxm:ResourceString Name=ViewTitleAutoClicking}"/>
                            <TextBlock
                                Grid.Row="1"
                                HorizontalAlignment="Center"
                                Style="{StaticResource CaptionTextBlockStyle}"
                                Text="{Binding HotKeyOptions.MouseClickRepeatForeverKeyCombination.DisplayName, Mode=OneWay}"/>
                        </Grid>
                    </ToggleButton>
                    <ToggleButton
                        Grid.Column="1"
                        Padding="2"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Stretch"
                        BorderThickness="0"
                        IsChecked="{Binding HotKeyOptions.KeyPressRepeatForeverKeyCombination.IsOn, Mode=OneWay}"
                        IsHitTestVisible="False"
                        Visibility="{Binding HotKeyOptions.KeyPressRepeatForeverKeyCombination.IsEnabled, Converter={StaticResource BoolToVisibilityConverter}, Mode=OneWay}">
                        <Grid RowSpacing="4">
                            <Grid.RowDefinitions>
                                <RowDefinition/>
                                <RowDefinition Height="auto"/>
                            </Grid.RowDefinitions>
                            <TextBlock
                                Grid.Row="0"
                                HorizontalAlignment="Center"
                                Style="{StaticResource CaptionTextBlockStyle}"
                                Text="{shuxm:ResourceString Name=ViewTitleAutoPressing}"/>
                            <TextBlock
                                Grid.Row="1"
                                HorizontalAlignment="Center"
                                Style="{StaticResource CaptionTextBlockStyle}"
                                Text="{Binding HotKeyOptions.KeyPressRepeatForeverKeyCombination.DisplayName, Mode=OneWay}"/>
                        </Grid>
                    </ToggleButton>
                </Grid>
            </cwc:Case>
            <cwc:Case Value="Island">
                <Grid ColumnSpacing="4">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <ToggleSplitButton
                        Grid.Column="0"
                        Padding="4,2"
                        VerticalAlignment="Stretch"
                        IsChecked="{Binding LaunchOptions.IsSetFieldOfViewEnabled}"
                        IsEnabled="{Binding LaunchOptions.IslandFeatureStateMachine.CanToggleSetFovHotSwitch}">
                        <ToggleSplitButton.Flyout>
                            <Flyout FlyoutPresenterStyle="{ThemeResource FlyoutPresenterPadding4Style}" ShouldConstrainToRootBounds="False">
                                <StackPanel Orientation="Horizontal" Spacing="4">
                                    <Slider
                                        Width="120"
                                        Margin="8,0"
                                        VerticalAlignment="Center"
                                        LargeChange="10"
                                        Maximum="100"
                                        Minimum="0"
                                        SmallChange="1"
                                        Value="{Binding LaunchOptions.TargetFov, Mode=TwoWay}"/>
                                    <ToggleButton
                                        Padding="2"
                                        VerticalAlignment="Stretch"
                                        IsChecked="{Binding LaunchOptions.IsSetFieldOfViewEnabled}"
                                        Style="{ThemeResource DefaultToggleButtonStyle}">
                                        <StackPanel Spacing="4">
                                            <FontIcon
                                                HorizontalAlignment="Center"
                                                FontSize="16"
                                                Glyph="&#xF19D;"/>
                                            <TextBlock
                                                HorizontalAlignment="Center"
                                                FontSize="8"
                                                Style="{StaticResource CaptionTextBlockStyle}"
                                                Text="特殊界面修正"/>
                                        </StackPanel>
                                    </ToggleButton>
                                    <ToggleButton
                                        Padding="2"
                                        VerticalAlignment="Stretch"
                                        IsChecked="{Binding LaunchOptions.IsSetFieldOfViewEnabled}"
                                        Style="{ThemeResource DefaultToggleButtonStyle}">
                                        <StackPanel Spacing="4">
                                            <FontIcon
                                                HorizontalAlignment="Center"
                                                FontSize="16"
                                                Glyph="&#xEC9C;"/>
                                            <TextBlock
                                                HorizontalAlignment="Center"
                                                FontSize="8"
                                                Style="{StaticResource CaptionTextBlockStyle}"
                                                Text="移除迷雾"/>
                                        </StackPanel>
                                    </ToggleButton>
                                </StackPanel>
                            </Flyout>
                        </ToggleSplitButton.Flyout>
                        <StackPanel Spacing="4">
                            <FontIcon
                                HorizontalAlignment="Center"
                                FontSize="16"
                                Glyph="&#xE890;"/>
                            <TextBlock
                                HorizontalAlignment="Center"
                                FontSize="8"
                                Style="{StaticResource CaptionTextBlockStyle}"
                                Text="调整视野"/>
                        </StackPanel>
                    </ToggleSplitButton>
                </Grid>
            </cwc:Case>
        </cwc:SwitchPresenter>
    </Grid>
</UserControl>
