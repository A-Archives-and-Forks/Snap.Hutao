<UserControl
    x:Class="Snap.Hutao.UI.Xaml.View.OverlayView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:Snap.Hutao.UI.Xaml.View"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:shuxm="using:Snap.Hutao.UI.Xaml.Markup"
    xmlns:shvo="using:Snap.Hutao.ViewModel.Overlay"
    d:DataContext="{d:DesignInstance shvo:OverlayViewModel}"
    mc:Ignorable="d">

    <Grid
        Padding="6"
        Background="{ThemeResource SolidBackgroundFillColorBaseBrush}"
        BackgroundSizing="OuterBorderEdge"
        BorderBrush="{x:Null}"
        BorderThickness="0"
        ColumnSpacing="6"
        CornerRadius="{ThemeResource OverlayCornerRadius}">
        <Grid.Resources>
            <SolidColorBrush
                x:Key="SolidBackgroundFillColorBaseBrush"
                Opacity="0.4"
                Color="{ThemeResource SolidBackgroundFillColorBase}"/>
        </Grid.Resources>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <SplitButton
            Grid.Column="0"
            VerticalAlignment="Stretch"
            BorderThickness="0">
            <SplitButton.Content>
                <FontIcon Glyph="&#xE92E;"/>
            </SplitButton.Content>
            <SplitButton.Flyout>
                <Flyout Placement="Bottom" ShouldConstrainToRootBounds="False"/>
            </SplitButton.Flyout>
        </SplitButton>

        <Grid Grid.Column="1" ColumnSpacing="6">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <ToggleButton
                Grid.Column="0"
                Padding="2"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch"
                BorderThickness="0"
                IsChecked="{Binding HotKeyOptions.MouseClickRepeatForeverKeyCombination.IsOn, Mode=OneWay}"
                IsHitTestVisible="False"
                Visibility="{Binding HotKeyOptions.MouseClickRepeatForeverKeyCombination.IsEnabled, Converter={StaticResource BoolToVisibilityConverter}, Mode=OneWay}">
                <Grid RowSpacing="2">
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition Height="auto"/>
                    </Grid.RowDefinitions>
                    <TextBlock
                        Grid.Row="0"
                        HorizontalAlignment="Center"
                        Style="{StaticResource CaptionTextBlockStyle}"
                        Text="{shuxm:ResourceString Name=ViewTitleAutoClicking}"/>
                    <TextBlock
                        Grid.Row="1"
                        HorizontalAlignment="Center"
                        Style="{StaticResource CaptionTextBlockStyle}"
                        Text="{Binding HotKeyOptions.MouseClickRepeatForeverKeyCombination.DisplayName, Mode=OneWay}"/>
                </Grid>
            </ToggleButton>
            <ToggleButton
                Grid.Column="1"
                Padding="2"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch"
                BorderThickness="0"
                IsChecked="{Binding HotKeyOptions.KeyPressRepeatForeverKeyCombination.IsOn, Mode=OneWay}"
                IsHitTestVisible="False"
                Visibility="{Binding HotKeyOptions.KeyPressRepeatForeverKeyCombination.IsEnabled, Converter={StaticResource BoolToVisibilityConverter}, Mode=OneWay}">
                <Grid RowSpacing="2">
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition Height="auto"/>
                    </Grid.RowDefinitions>
                    <TextBlock
                        Grid.Row="0"
                        HorizontalAlignment="Center"
                        Style="{StaticResource CaptionTextBlockStyle}"
                        Text="{shuxm:ResourceString Name=ViewTitleAutoPressing}"/>
                    <TextBlock
                        Grid.Row="1"
                        HorizontalAlignment="Center"
                        Style="{StaticResource CaptionTextBlockStyle}"
                        Text="{Binding HotKeyOptions.KeyPressRepeatForeverKeyCombination.DisplayName, Mode=OneWay}"/>
                </Grid>
            </ToggleButton>
        </Grid>
    </Grid>
</UserControl>
