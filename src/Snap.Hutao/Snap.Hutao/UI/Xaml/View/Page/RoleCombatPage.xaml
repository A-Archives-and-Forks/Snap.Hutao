<shuxc:ScopedPage
    x:Class="Snap.Hutao.UI.Xaml.View.Page.RoleCombatPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:cw="using:CommunityToolkit.WinUI"
    xmlns:cwc="using:CommunityToolkit.WinUI.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:mxi="using:Microsoft.Xaml.Interactivity"
    xmlns:shmi="using:Snap.Hutao.Model.Intrinsic"
    xmlns:shuxb="using:Snap.Hutao.UI.Xaml.Behavior"
    xmlns:shuxc="using:Snap.Hutao.UI.Xaml.Control"
    xmlns:shuxci="using:Snap.Hutao.UI.Xaml.Control.Image"
    xmlns:shuxcp="using:Snap.Hutao.UI.Xaml.Control.Panel"
    xmlns:shuxct="using:Snap.Hutao.UI.Xaml.Control.TextBlock"
    xmlns:shuxdcs="using:Snap.Hutao.UI.Xaml.Data.Converter.Specialized"
    xmlns:shuxm="using:Snap.Hutao.UI.Xaml.Markup"
    xmlns:shvr="using:Snap.Hutao.ViewModel.RoleCombat"
    d:DataContext="{d:DesignInstance shvr:RoleCombatViewModel}"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
    mc:Ignorable="d">

    <mxi:Interaction.Behaviors>
        <shuxb:InvokeCommandOnLoadedBehavior Command="{Binding LoadCommand}"/>
    </mxi:Interaction.Behaviors>

    <shuxc:ScopedPage.Resources>
        <DataTemplate x:Key="RoleCombatListTemplate" x:DataType="shvr:RoleCombatView">
            <StackPanel Margin="0,6,0,8">
                <Grid ColumnSpacing="12">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition Width="auto"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0" Text="{Binding Schedule}"/>
                    <TextBlock
                        Grid.Column="1"
                        Opacity="0.8"
                        Text="{Binding MaxRound}"/>
                </Grid>
                <MenuFlyoutSeparator Margin="3,2"/>
                <TextBlock
                    Opacity="0.6"
                    Style="{StaticResource CaptionTextBlockStyle}"
                    Text="{Binding TimeFormatted}"/>
            </StackPanel>
        </DataTemplate>

        <DataTemplate x:Key="DescriptionTextTemplate" x:DataType="x:String">
            <shuxct:DescriptionTextBlock Description="{Binding}">
                <shuxct:DescriptionTextBlock.Resources>
                    <Style BasedOn="{StaticResource BodyTextBlockStyle}" TargetType="TextBlock">
                        <Setter Property="TextWrapping" Value="Wrap"/>
                    </Style>
                </shuxct:DescriptionTextBlock.Resources>
            </shuxct:DescriptionTextBlock>
        </DataTemplate>

        <DataTemplate x:Key="EnemyTemplate" x:DataType="shvr:EnemyView">
            <Grid>
                <ToolTipService.ToolTip>
                    <StackPanel Spacing="{StaticResource SettingsCardContentControlSpacing}">
                        <TextBlock Style="{StaticResource BaseTextBlockStyle}" Text="{Binding Name}"/>
                        <TextBlock Style="{StaticResource BaseTextBlockStyle}" Text="{Binding Level}"/>
                    </StackPanel>
                </ToolTipService.ToolTip>
                <Grid Height="50" CornerRadius="25">
                    <shuxc:ItemIcon
                        Width="50"
                        Height="50"
                        Icon="{Binding Icon}"/>
                </Grid>
            </Grid>
        </DataTemplate>

        <DataTemplate x:Key="TrialTemplate">
            <Border Background="#80000000" CornerRadius="{ThemeResource ControlCornerRadiusTopRightAndBottomLeft}">
                <TextBlock
                    Margin="6,0,6,2"
                    Foreground="#FFFFFFFF"
                    Text="试用"/>
            </Border>
        </DataTemplate>

        <DataTemplate x:Key="SupportTemplate">
            <Border Background="#80000000" CornerRadius="{ThemeResource ControlCornerRadiusTopRightAndBottomLeft}">
                <TextBlock
                    Margin="6,0,6,2"
                    Foreground="#FFFFFFFF"
                    Text="助演"/>
            </Border>
        </DataTemplate>

        <shvr:RoleCombatAvatarTypeTemplateSelector
            x:Key="RoleCombatAvatarTypeTemplateSelector"
            SupportTemplate="{StaticResource SupportTemplate}"
            TrialTemplate="{StaticResource TrialTemplate}"/>

        <DataTemplate x:Key="AvatarTemplate" x:DataType="shvr:AvatarView">
            <Grid>
                <shuxc:ItemIcon
                    Width="60"
                    Height="60"
                    Icon="{Binding Icon}"
                    Quality="{Binding Quality}"/>
                <ContentControl
                    HorizontalAlignment="Right"
                    VerticalAlignment="Top"
                    Content="{Binding Type}"
                    ContentTemplateSelector="{StaticResource RoleCombatAvatarTypeTemplateSelector}"/>
            </Grid>
        </DataTemplate>

        <DataTemplate x:Key="BuffTemplate" x:DataType="shvr:BuffView">
            <Grid>
                <ToolTipService.ToolTip>
                    <StackPanel Spacing="{StaticResource SettingsCardContentControlSpacing}">
                        <TextBlock Style="{StaticResource BaseTextBlockStyle}" Text="{Binding Name}"/>
                        <shuxct:DescriptionTextBlock Description="{Binding Description}">
                            <shuxct:DescriptionTextBlock.Resources>
                                <Style BasedOn="{StaticResource BodyTextBlockStyle}" TargetType="TextBlock">
                                    <Setter Property="TextWrapping" Value="Wrap"/>
                                </Style>
                            </shuxct:DescriptionTextBlock.Resources>
                        </shuxct:DescriptionTextBlock>
                    </StackPanel>
                </ToolTipService.ToolTip>
                <Grid Height="40" CornerRadius="20">
                    <shuxc:ItemIcon
                        Width="40"
                        Height="40"
                        Background="#A4000000"
                        Icon="{Binding Icon}"/>
                </Grid>
            </Grid>
        </DataTemplate>

        <DataTemplate x:Key="SplendourBuffLevelEffectTemplate" x:DataType="x:String">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <TextBlock
                    Grid.Column="0"
                    Style="{ThemeResource BodyTextBlockStyle}"
                    Text="• "/>
                <shuxct:DescriptionTextBlock Grid.Column="1" Description="{Binding}">
                    <shuxct:DescriptionTextBlock.Resources>
                        <Style BasedOn="{StaticResource BodyTextBlockStyle}" TargetType="TextBlock">
                            <Setter Property="TextWrapping" Value="Wrap"/>
                        </Style>
                    </shuxct:DescriptionTextBlock.Resources>
                </shuxct:DescriptionTextBlock>
            </Grid>
        </DataTemplate>

        <DataTemplate x:Key="SplendourBuffTemplate" x:DataType="shvr:SplendourBuffView">
            <Grid>
                <ToolTipService.ToolTip>
                    <StackPanel Spacing="{StaticResource SettingsCardContentControlSpacing}">
                        <TextBlock Style="{StaticResource BaseTextBlockStyle}" Text="{Binding Name}"/>
                        <ItemsControl ItemTemplate="{StaticResource SplendourBuffLevelEffectTemplate}" ItemsSource="{Binding Effects}"/>
                    </StackPanel>
                </ToolTipService.ToolTip>
                <Grid Height="40" CornerRadius="20">
                    <shuxc:ItemIcon
                        Width="40"
                        Height="40"
                        Background="#A4000000"
                        Icon="{Binding Icon}"/>
                </Grid>
                <InfoBadge
                    HorizontalAlignment="Right"
                    VerticalAlignment="Bottom"
                    Value="{Binding Level}">
                    <InfoBadge.RenderTransform>
                        <CompositeTransform TranslateX="4" TranslateY="4"/>
                    </InfoBadge.RenderTransform>
                </InfoBadge>
            </Grid>
        </DataTemplate>

        <shuxdcs:ElementTypeIconConverter x:Key="ElementTypeIconConverter"/>

        <DataTemplate x:Key="ElementTemplate" x:DataType="shmi:ElementType">
            <shuxci:CachedImage
                Width="20"
                Height="20"
                ShowAsMonoChrome="True"
                Source="{Binding Converter={StaticResource ElementTypeIconConverter}, Mode=OneWay}"/>
        </DataTemplate>

        <DataTemplate x:Key="RoundTemplate" x:DataType="shvr:RoundView">
            <Border
                Margin="0,0,8,0"
                VerticalAlignment="Top"
                Style="{StaticResource BorderCardStyle}">
                <Grid Margin="8">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <Grid Grid.Row="0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition Width="auto"/>
                        </Grid.ColumnDefinitions>
                        <StackPanel Orientation="Horizontal" Spacing="2">
                            <BitmapIcon
                                Width="20"
                                ShowAsMonochrome="False"
                                UriSource="ms-appx:///Resource/Icon/UI_Icon_Tower_Star1.png"
                                Visibility="{Binding IsGetMedal, Converter={StaticResource BoolToVisibilityConverter}}"/>
                            <BitmapIcon
                                Width="20"
                                Foreground="#FF808080"
                                UriSource="ms-appx:///Resource/Icon/UI_Icon_Tower_Star2.png"
                                Visibility="{Binding IsGetMedal, Converter={StaticResource BoolToVisibilityRevertConverter}}"/>
                            <TextBlock Style="{StaticResource BaseTextBlockStyle}" Text="{Binding RoundId}"/>
                        </StackPanel>
                        <TextBlock
                            Grid.Column="1"
                            Margin="8,0,0,0"
                            HorizontalAlignment="Right"
                            Style="{StaticResource BodyTextBlockStyle}"
                            Text="{Binding FinishTimeString}"
                            TextAlignment="Center"/>
                    </Grid>
                    <Grid Grid.Row="1" Margin="0,4">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>
                        <ItemsControl
                            Grid.Column="0"
                            VerticalAlignment="Center"
                            ItemTemplate="{StaticResource EnemyTemplate}"
                            ItemsSource="{Binding Enemies}">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <shuxcp:WrapPanel HorizontalSpacing="6"/>
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                        </ItemsControl>
                        <ItemsControl
                            Grid.Column="1"
                            HorizontalAlignment="Right"
                            ItemTemplate="{StaticResource AvatarTemplate}"
                            ItemsSource="{Binding Avatars}">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <shuxcp:WrapPanel HorizontalSpacing="6"/>
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                        </ItemsControl>
                    </Grid>
                    <Grid Grid.Row="2" Margin="0,4">
                        <Grid.RowDefinitions>
                            <RowDefinition/>
                            <RowDefinition/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>
                        <StackPanel Grid.RowSpan="2" Spacing="2">
                            <TextBlock Style="{ThemeResource SettingsCardHeaderTextBlockStyle}" Text="辉彩祝福"/>
                            <shuxct:DescriptionTextBlock Margin="0,0,0,5" Description="{Binding SplendourSummary}">
                                <shuxct:DescriptionTextBlock.Resources>
                                    <Style BasedOn="{StaticResource BodyTextBlockStyle}" TargetType="TextBlock">
                                        <Setter Property="TextWrapping" Value="Wrap"/>
                                    </Style>
                                </shuxct:DescriptionTextBlock.Resources>
                            </shuxct:DescriptionTextBlock>
                            <ItemsControl ItemTemplate="{StaticResource SplendourBuffTemplate}" ItemsSource="{Binding SplendourBuffs}">
                                <ItemsControl.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <shuxcp:WrapPanel HorizontalSpacing="6" VerticalSpacing="6"/>
                                    </ItemsPanelTemplate>
                                </ItemsControl.ItemsPanel>
                            </ItemsControl>
                        </StackPanel>
                        <StackPanel Grid.Column="1" Spacing="2">
                            <TextBlock Style="{ThemeResource SettingsCardHeaderTextBlockStyle}" Text="奇妙助益"/>
                            <ItemsControl ItemTemplate="{StaticResource BuffTemplate}" ItemsSource="{Binding Buffs}">
                                <ItemsControl.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <shuxcp:WrapPanel HorizontalSpacing="6" VerticalSpacing="6"/>
                                    </ItemsPanelTemplate>
                                </ItemsControl.ItemsPanel>
                            </ItemsControl>
                        </StackPanel>
                        <StackPanel
                            Grid.Row="1"
                            Grid.Column="1"
                            Spacing="2">
                            <TextBlock Style="{ThemeResource SettingsCardHeaderTextBlockStyle}" Text="神秘收获"/>
                            <ItemsControl ItemTemplate="{StaticResource BuffTemplate}" ItemsSource="{Binding ChoiceCards}">
                                <ItemsControl.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <shuxcp:WrapPanel HorizontalSpacing="6" VerticalSpacing="6"/>
                                    </ItemsPanelTemplate>
                                </ItemsControl.ItemsPanel>
                            </ItemsControl>
                        </StackPanel>
                    </Grid>
                </Grid>
            </Border>
        </DataTemplate>
    </shuxc:ScopedPage.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Pivot Grid.RowSpan="2" Style="{ThemeResource CardPivotStyle}">
            <Pivot.RightHeader>
                <CommandBar Grid.Row="0" DefaultLabelPosition="Right">
                    <!--  <AppBarButton  -->
                    <!--  Command="{Binding UploadSpiralAbyssRecordCommand}"  -->
                    <!--  Icon="{shuxm:FontIcon Glyph=&#xE898;}"  -->
                    <!--  Label="{shuxm:ResourceString Name=ViewSpiralAbyssUploadRecord}"/>  -->
                    <AppBarButton
                        Command="{Binding RefreshCommand}"
                        Icon="{shuxm:FontIcon Glyph=&#xE72C;}"
                        Label="{shuxm:ResourceString Name=ViewSpiralAbyssRefresh}"/>
                </CommandBar>
            </Pivot.RightHeader>

            <PivotItem Header="{shuxm:ResourceString Name=ViewSpiralAbyssDetail}">
                <Border Margin="16" cw:Effects.Shadow="{ThemeResource CompatCardShadow}">
                    <Border Style="{ThemeResource AcrylicBorderCardStyle}">
                        <SplitView
                            DisplayMode="Inline"
                            IsPaneOpen="True"
                            OpenPaneLength="248"
                            PaneBackground="Transparent">
                            <SplitView.Pane>
                                <ListView
                                    Padding="{ThemeResource ListViewInSplitPanePadding}"
                                    Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                                    ItemTemplate="{StaticResource RoleCombatListTemplate}"
                                    ItemsSource="{Binding RoleCombatEntries}"
                                    SelectedItem="{Binding RoleCombatEntries.CurrentItem, Mode=TwoWay}"/>
                            </SplitView.Pane>
                            <SplitView.Content>
                                <ScrollViewer>
                                    <StackPanel DataContext="{Binding RoleCombatEntries.CurrentItem}">
                                        <Grid Margin="16,12,16,0">
                                            <Grid Margin="1,0,0,0">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition/>
                                                    <ColumnDefinition/>
                                                </Grid.ColumnDefinitions>
                                                <StackPanel>
                                                    <TextBlock
                                                        HorizontalAlignment="Center"
                                                        Style="{ThemeResource SettingsCardHeaderTextBlockStyle}"
                                                        Text="开幕角色"/>
                                                    <ItemsControl
                                                        HorizontalAlignment="Center"
                                                        ItemTemplate="{StaticResource AvatarTemplate}"
                                                        ItemsSource="{Binding InitialAvatars}">
                                                        <ItemsControl.ItemsPanel>
                                                            <ItemsPanelTemplate>
                                                                <shuxcp:WrapPanel HorizontalSpacing="6" VerticalSpacing="6"/>
                                                            </ItemsPanelTemplate>
                                                        </ItemsControl.ItemsPanel>
                                                    </ItemsControl>
                                                    <ItemsControl
                                                        Margin="0,2,0,0"
                                                        HorizontalAlignment="Center"
                                                        ItemTemplate="{StaticResource ElementTemplate}"
                                                        ItemsSource="{Binding Elements}">
                                                        <ItemsControl.ItemsPanel>
                                                            <ItemsPanelTemplate>
                                                                <shuxcp:WrapPanel HorizontalSpacing="112" VerticalSpacing="6"/>
                                                            </ItemsPanelTemplate>
                                                        </ItemsControl.ItemsPanel>
                                                    </ItemsControl>
                                                </StackPanel>
                                                <StackPanel Grid.Column="1">
                                                    <TextBlock
                                                        HorizontalAlignment="Center"
                                                        Style="{ThemeResource SettingsCardHeaderTextBlockStyle}"
                                                        Text="特邀角色"/>
                                                    <ItemsControl
                                                        HorizontalAlignment="Center"
                                                        ItemTemplate="{StaticResource AvatarTemplate}"
                                                        ItemsSource="{Binding SpecialAvatars}">
                                                        <ItemsControl.ItemsPanel>
                                                            <ItemsPanelTemplate>
                                                                <shuxcp:WrapPanel HorizontalSpacing="6" VerticalSpacing="6"/>
                                                            </ItemsPanelTemplate>
                                                        </ItemsControl.ItemsPanel>
                                                    </ItemsControl>
                                                </StackPanel>
                                            </Grid>

                                            <AppBarButton
                                                HorizontalAlignment="Right"
                                                Icon="{shuxm:FontIcon Glyph=&#xE8A1;}"
                                                Label="演出回顾"
                                                Visibility="{Binding Engaged, Converter={StaticResource BoolToVisibilityConverter}}">
                                                <AppBarButton.Flyout>
                                                    <Flyout Placement="BottomEdgeAlignedRight">
                                                        <Flyout.FlyoutPresenterStyle>
                                                            <Style BasedOn="{StaticResource DefaultFlyoutPresenterStyle}" TargetType="FlyoutPresenter">
                                                                <Setter Property="MaxWidth" Value="1920"/>
                                                            </Style>
                                                        </Flyout.FlyoutPresenterStyle>
                                                        <Grid ColumnSpacing="6">
                                                            <Grid.Resources>
                                                                <x:Double x:Key="SettingsCardWrapThreshold">0</x:Double>
                                                                <x:Double x:Key="SettingsCardWrapNoIconThreshold">0</x:Double>
                                                                <x:Double x:Key="SettingsCardMinHeight">0</x:Double>
                                                            </Grid.Resources>
                                                            <Grid.ColumnDefinitions>
                                                                <ColumnDefinition Width="345"/>
                                                                <ColumnDefinition Width="225"/>
                                                            </Grid.ColumnDefinitions>

                                                            <StackPanel Grid.Column="0" Spacing="{StaticResource SettingsCardSpacing}">
                                                                <cwc:SettingsCard Header="{shuxm:ResourceString Name=ViewSpiralAbyssDefeat}">
                                                                    <StackPanel Orientation="Horizontal">
                                                                        <TextBlock
                                                                            Margin="0,0,16,0"
                                                                            VerticalAlignment="Center"
                                                                            Text="{Binding Defeat.Value}"/>
                                                                        <shuxci:CachedImage
                                                                            Width="48"
                                                                            Height="48"
                                                                            Margin="-8,-24,-8,-8"
                                                                            Source="{Binding Defeat.SideIcon}"/>
                                                                    </StackPanel>
                                                                </cwc:SettingsCard>

                                                                <cwc:SettingsCard Header="{shuxm:ResourceString Name=ViewSpiralAbyssDamage}">
                                                                    <StackPanel Orientation="Horizontal">
                                                                        <TextBlock
                                                                            Margin="0,0,16,0"
                                                                            VerticalAlignment="Center"
                                                                            Text="{Binding Damage.Value}"/>
                                                                        <shuxci:CachedImage
                                                                            Width="48"
                                                                            Height="48"
                                                                            Margin="-8,-24,-8,-8"
                                                                            Source="{Binding Damage.SideIcon}"/>
                                                                    </StackPanel>
                                                                </cwc:SettingsCard>

                                                                <cwc:SettingsCard Header="{shuxm:ResourceString Name=ViewSpiralAbyssTakeDamage}">
                                                                    <StackPanel Orientation="Horizontal">
                                                                        <TextBlock
                                                                            Margin="0,0,16,0"
                                                                            VerticalAlignment="Center"
                                                                            Text="{Binding TakeDamage.Value}"/>
                                                                        <shuxci:CachedImage
                                                                            Width="48"
                                                                            Height="48"
                                                                            Margin="-8,-24,-8,-8"
                                                                            Source="{Binding TakeDamage.SideIcon}"/>
                                                                    </StackPanel>
                                                                </cwc:SettingsCard>

                                                                <cwc:SettingsCard Header="消耗「幻剧之花」">
                                                                    <StackPanel Orientation="Horizontal">
                                                                        <TextBlock VerticalAlignment="Center" Text="{Binding Stat.CoinNumber}"/>
                                                                    </StackPanel>
                                                                </cwc:SettingsCard>

                                                                <cwc:SettingsCard Header="挑战星章">
                                                                    <ItemsControl ItemsSource="{Binding Stat.GetMedalRoundList}">
                                                                        <ItemsControl.ItemTemplate>
                                                                            <DataTemplate x:DataType="x:Int32">
                                                                                <Grid>
                                                                                    <BitmapIcon
                                                                                        Width="20"
                                                                                        ShowAsMonochrome="False"
                                                                                        UriSource="ms-appx:///Resource/Icon/UI_Icon_Tower_Star1.png"
                                                                                        Visibility="{Binding Converter={StaticResource Int32ToVisibilityConverter}}"/>
                                                                                    <BitmapIcon
                                                                                        Width="20"
                                                                                        Foreground="#FF808080"
                                                                                        UriSource="ms-appx:///Resource/Icon/UI_Icon_Tower_Star2.png"
                                                                                        Visibility="{Binding Converter={StaticResource Int32ToVisibilityRevertConverter}}"/>
                                                                                </Grid>
                                                                            </DataTemplate>
                                                                        </ItemsControl.ItemTemplate>
                                                                        <ItemsControl.ItemsPanel>
                                                                            <ItemsPanelTemplate>
                                                                                <StackPanel Orientation="Horizontal" Spacing="2"/>
                                                                            </ItemsPanelTemplate>
                                                                        </ItemsControl.ItemsPanel>
                                                                    </ItemsControl>
                                                                </cwc:SettingsCard>
                                                            </StackPanel>
                                                            <StackPanel Grid.Column="1" Spacing="{StaticResource SettingsCardSpacing}">
                                                                <cwc:SettingsCard Content="{Binding MaxRound}" Header="最佳记录"/>
                                                                <cwc:SettingsCard Content="{Binding Stat.AvatarBonusNumber}" Header="场外声援"/>
                                                                <cwc:SettingsCard Content="{Binding Stat.RentCount}" Header="助演次数"/>

                                                                <TextBlock
                                                                    Margin="1,6,0,5"
                                                                    Style="{StaticResource SettingsSectionHeaderTextBlockStyle}"
                                                                    Text="最快演出"/>
                                                                <ItemsControl HorizontalAlignment="Left" ItemsSource="{Binding Shortest}">
                                                                    <ItemsControl.ItemsPanel>
                                                                        <ItemsPanelTemplate>
                                                                            <cwc:UniformGrid ColumnSpacing="3" Columns="4"/>
                                                                        </ItemsPanelTemplate>
                                                                    </ItemsControl.ItemsPanel>
                                                                    <ItemsControl.ItemTemplate>
                                                                        <DataTemplate>
                                                                            <shuxc:ItemIcon
                                                                                Width="52"
                                                                                Height="52"
                                                                                Icon="{Binding Icon}"
                                                                                Quality="{Binding Quality}"/>
                                                                        </DataTemplate>
                                                                    </ItemsControl.ItemTemplate>
                                                                </ItemsControl>
                                                            </StackPanel>
                                                        </Grid>
                                                    </Flyout>
                                                </AppBarButton.Flyout>
                                            </AppBarButton>
                                        </Grid>

                                        <StackPanel Margin="16,12">
                                            <TextBlock Style="{ThemeResource SubtitleTextBlockStyle}" Text="{Binding Stat.DifficultyId}"/>
                                            <TextBlock Style="{ThemeResource BodyTextBlockStyle}" Text="{Binding TotalBattleTimesFormatted}"/>
                                            <!--<ItemsControl ItemTemplate="{StaticResource RoundTemplate}" ItemsSource="{Binding Rounds}">
                                                <ItemsControl.ItemsPanel>
                                                    <ItemsPanelTemplate>
                                                        <cwc:UniformGrid Columns="2" RowSpacing="8"/>
                                                    </ItemsPanelTemplate>
                                                </ItemsControl.ItemsPanel>
                                            </ItemsControl>-->
                                            <ScrollViewer HorizontalScrollBarVisibility="Disabled">
                                                <ItemsRepeater ItemTemplate="{StaticResource RoundTemplate}" ItemsSource="{Binding Rounds}">
                                                    <ItemsRepeater.Layout>
                                                        <UniformGridLayout
                                                            ItemsJustification="Start"
                                                            ItemsStretch="Fill"
                                                            MinItemWidth="570"
                                                            MinRowSpacing="8"/>
                                                    </ItemsRepeater.Layout>
                                                </ItemsRepeater>
                                            </ScrollViewer>
                                        </StackPanel>
                                    </StackPanel>
                                </ScrollViewer>
                            </SplitView.Content>
                        </SplitView>
                    </Border>
                </Border>

            </PivotItem>

