<Window
    x:Class="Snap.Hutao.UI.Xaml.View.Window.ExceptionWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:shuxm="using:Snap.Hutao.UI.Xaml.Markup"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid
            x:Name="DraggableGrid"
            Grid.Row="0"
            Height="32">
            <TextBlock
                Margin="12,0,0,0"
                VerticalAlignment="Center"
                Style="{StaticResource CaptionTextBlockStyle}"
                Text="{shuxm:ResourceString Name=ViewWindowExceptionTitle}"/>
        </Grid>
        <Grid
            Grid.Row="1"
            Padding="16"
            Background="{ThemeResource SolidBackgroundFillColorBaseBrush}"
            RowSpacing="16">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <StackPanel Grid.Row="0">
                <TextBlock Style="{StaticResource SubheaderTextBlockStyle}" Text="{shuxm:ResourceString Name=ViewWindowExceptionHeader}"/>
                <TextBlock
                    Foreground="{ThemeResource SystemControlErrorTextForegroundBrush}"
                    IsTextSelectionEnabled="True"
                    Text="{x:Bind TraceId}"/>
            </StackPanel>
            <TextBox
                Grid.Row="1"
                AcceptsReturn="True"
                Header="{shuxm:ResourceString Name=ViewExceptionWindowStacktraceHeader}"
                IsReadOnly="True"
                ScrollViewer.HorizontalScrollBarVisibility="Auto"
                Text="{x:Bind Exception}"/>
            <TextBox
                Grid.Row="2"
                AcceptsReturn="True"
                Description="{shuxm:ResourceString Name=ViewExceptionWindowCommentDescription}"
                Header="{shuxm:ResourceString Name=ViewExceptionWindowCommentHeader}"
                ScrollViewer.HorizontalScrollBarVisibility="Auto"
                Text="{x:Bind Comment, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
            <StackPanel
                Grid.Row="3"
                HorizontalAlignment="Right"
                Orientation="Horizontal">
                <Button Command="{x:Bind CloseCommand}" Content="{shuxm:ResourceString Name=ViewWindowExceptionClose}"/>
            </StackPanel>
        </Grid>
    </Grid>
</Window>