<Window
    x:Class="Snap.Hutao.UI.Xaml.View.Window.WebView2.CompactWebView2Window"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid x:Name="RootGrid">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition x:Name="TitleBarRowDefinition" Height="auto"/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="auto"/>
                </Grid.ColumnDefinitions>
                <Button
                    x:Name="GoBackButton"
                    Grid.Column="0"
                    Height="48"
                    MinWidth="48"
                    Command="{x:Bind GoBackCommand}"
                    FontSize="12"
                    Style="{StaticResource NavigationBackButtonSmallStyle}"/>
                <Button
                    x:Name="RefreshButton"
                    Grid.Column="1"
                    Height="48"
                    MinWidth="48"
                    Content="&#xE72C;"
                    FontSize="12"
                    Style="{StaticResource NavigationBackButtonSmallStyle}"/>
                <ProgressRing
                    x:Name="ProgressRing"
                    Grid.Column="2"
                    Width="16"
                    Height="16"
                    Margin="16,2,4,2"
                    IsActive="True"
                    IsIndeterminate="True"
                    Visibility="Collapsed"/>
                <Grid x:Name="TitleArea" Grid.Column="3">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock
                        x:Name="DocumentTitle"
                        Grid.Column="0"
                        MaxWidth="120"
                        Margin="12,4,0,4"
                        VerticalAlignment="Center"
                        SizeChanged="OnDocumentTitleSizeChanged"
                        TextTrimming="CharacterEllipsis"
                        TextWrapping="NoWrap"/>
                    <TextBox
                        x:Name="SourceTextBox"
                        Grid.Column="1"
                        Margin="8"
                        VerticalAlignment="Top"
                        KeyDown="OnSourceTextBoxKeyDown"
                        Text="{x:Bind Source, Mode=TwoWay}"/>
                </Grid>
                <StackPanel
                    Grid.Column="4"
                    Margin="48,0,0,0"
                    Orientation="Horizontal">
                    <Button
                        Height="48"
                        MinWidth="44"
                        Command="{x:Bind CloseCommand}"
                        Content="&#xE711;"
                        FontSize="12"
                        Style="{StaticResource NavigationBackButtonSmallStyle}"/>
                </StackPanel>
            </Grid>
            <WebView2
                x:Name="WebView"
                Grid.Row="1"
                Margin="0"
                DefaultBackgroundColor="Transparent"/>
        </Grid>
        <Button
            x:Name="ToggleLockButton"
            Height="48"
            MinWidth="48"
            Margin="0,0,48,0"
            HorizontalAlignment="Right"
            VerticalAlignment="Top"
            Command="{x:Bind ToggleLockCommand}"
            Content="&#xE785;"
            FontSize="12"
            Style="{StaticResource NavigationBackButtonSmallStyle}"/>
    </Grid>

</Window>
